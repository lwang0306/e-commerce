<p id="notice"><%= notice %></p>
<div id="heading">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="heading-content">
          <h2>Pura Community</h2>
          <span>Home / <%= link_to 'Our Life Style', blogs_path %></span>
        </div>
      </div>
    </div>
  </div>
</div>





<div id="product-post">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="heading-section">
          <h2><%= @blog.title %></h2>
          <img src="../../images/under-heading.png" alt="" />
        </div>
      </div>
    </div>
    <div id="single-blog" class="page-section first-section">
      <div class="container">
        <div class="row">
          <div class="product-item col-md-12">
            <div class="row">
              <div class="col-md-12">
                <div class="image">
                  <div class="image-post">
                    <%= image_tag @blog.picture_url(:thumb).to_s %>
                  </div>
                </div>
                <div class="product-content">
                  <div style="font-size:12px;text-align:justify;text-justify:inter-ideograph">
                    <p>
                    <%= @blog.content %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
