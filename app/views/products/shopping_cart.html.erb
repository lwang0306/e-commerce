<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div id="product-heading">
        <h2>Your Shopping Cart</h2>
        <img src="/assets/under-heading.png" alt="" >
      </div>
    </div>
  </div>
  <div class="row">
    <div class="filters col-md-12 col-xs-12">
      <ul id="filters" class="clearfix">
        <li><span class="filter"><%= link_to "Back to All Products", products_path %></span></li>
      </ul>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-12"><p></p></div>
  </div>
  <div class="row">
    <div class="col-md-3" align="right">
      <h5></h5>
    </div>
    <div class="col-md-3">
      <h5><p></p></h5>
    </div>
    <div class="col-md-3">
      <h6>Price</h6>
    </div>
    <div class="col-md-3">
      <h6>Quantity</h6>
    </div>
  </div>
  <% showed_id = [] %>
  <% @products.each do |product| %>
      <% if (!showed_id.include?(product.id)) then %>
          <% showed_id << product.id %>
          <div class="row">
            <div class="col-md-3" align="right">
              <%= link_to image_tag(product.image_url(:thumb).to_s), product %>
            </div>
            <div class="col-md-3">
              <h5><%= link_to product.name, product, :color => "orange" %></h5>
            </div>
            <div class="col-md-3">
              <h6 style="color:orange;"><%= product.price.to_s %></h6>
            </div>
            <div class="col-md-3">
              <% current_user = User.find(session['warden.user.user.key'][0][0]) %>
              <% count = 0 %>
              <% items = current_user.products %>
              <% items.each do |item| %>
                  <% if (item.id == product.id)  then %>
                      <% count += 1 %>
                  <% end %>
              <% end %>
              <h5>
                <%= link_to "&nbsp;-&nbsp;".html_safe, products_path + '/decrease/' + product.id.to_s, {:style => 'color:orange;'} %>
                <%= count %>
                <%= link_to "&nbsp;+&nbsp;".html_safe, products_path + '/increase/' + product.id.to_s, {:style => 'color:orange;'} %>
              </h5>
            </div>
          </div>
          <div class="row"><div class="col-md-12"><p></p></div></div>
      <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-12"><p></p></div>
  </div>
  <div class="row">
    <div class="col-md-3" align="right">
      <h5></h5>
    </div>
    <div class="col-md-3">
      <h5><p></p></h5>
    </div>
    <div class="col-md-3" align="right">
      <h5>Subtotal: </h5>
    </div>
    <div class="col-md-3">
      <h5 style="color:orange;">
        $<%= User.find(session['warden.user.user.key'][0][0]).total_price_in_cart().to_s %>
      </h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3" align="right">
      <h5></h5>
    </div>
    <div class="col-md-3">
      <h5><p></p></h5>
    </div>
    <div class="col-md-3" align="right">
      <h5></h5>
    </div>
    <div class="col-md-3">
      <div class="send">
        <button type="submit" style="font-size: small;">Checkout</button>
      </div>
    </div>
  </div>
</div>


<br><br><br>
