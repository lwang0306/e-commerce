<p id="notice"><%= notice %></p>

<div id="heading">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="heading-content">
          <h2>Healthy Product</h2>
          <span><a href="/products">All Products</a></span>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="product-post">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="heading-section">
          <h2>We Serve the Best</h2>
          <img src="/assets/under-heading.png" alt="" />
        </div>
      </div>
    </div>
  </div>
  <div id="single-blog" class="page-section first-section">
    <div class="container">
      <div class="row">
        <div class="product-item col-md-12">
          <div class="row">
            <div class="col-md-8">
              <div class="image">
                <div class="image-post" align="center" valign="center">
                  <%= image_tag @product.image_url().to_s %>
                </div>
              </div>
              <div class="product-content">
                <div class="product-title" align="center" valign="center">
                  <h3><%= @product.name %></h3>
                  <span class="subtitle">$<%= @product.price %></span>
                  <p><%= @product.description %></p>
                </div>
              </div>
            </div>
            <div class="col-md-3 col-md-offset-1">
              <div class="side-bar">
                <div class="recent-post">
                  <h4>Recent Products</h4>
                  <div class="posts">
                    <% @recent_products.each do |pro| %>
                        <div class="recent-post">
                          <div class="recent-post-thumb">
                            <%= image_tag pro.image_url().to_s %>
                          </div>
                          <div class="recent-post-info">
                            <h6><%= link_to pro.name, pro %></h6>
                            <span>$<%= pro.price %></span>
                          </div>
                        </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
